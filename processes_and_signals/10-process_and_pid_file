#!/usr/bin/env bash
#salam

PIDFILE="/var/run/myscript.pid"

# Function to clean up and exit
cleanup() {
    rm -f "$PIDFILE"
    exit 0
}

# Trap signals
trap 'echo "I hate the kill command";' SIGTERM
trap 'echo "Y U no love me?!";' SIGINT
trap 'cleanup' SIGQUIT SIGTERM

# Write PID to file
echo "$$" > "$PIDFILE"

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
